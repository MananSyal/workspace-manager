<div style="max-width:800px;">

  <h1>Create New Project</h1>
  <p class="subtitle">
    Provide basic details to create a new project.
  </p>

  <% if (error) { %>
    <p style="color:#dc2626;"><%= error %></p>
  <% } %>

  <form
    action="/projects"
    method="POST"
    class="card"
    style="margin-top:20px;"
  >

    <div style="margin-bottom:16px;">
      <label>Project Name</label>
      <input
        type="text"
        name="title"
        placeholder="Enter project name"
        required
        style="width:100%; margin-top:6px;"
      />
    </div>

    <div style="margin-bottom:20px;">
      <label>Description</label>
      <textarea
        name="description"
        rows="4"
        placeholder="Describe your project (optional)"
        style="width:100%; margin-top:6px;"
      ></textarea>
    </div>

    <div style="display:flex; justify-content:space-between;">
      <a
        href="/projects"
        style="
          padding:10px 16px;
          border:1px solid #cbd5f5;
          border-radius:8px;
          text-decoration:none;
          color:#334155;
        "
      >
        Cancel
      </a>

      <button
        type="submit"
        style="
          padding:10px 20px;
          background:#2563eb;
          color:white;
          border:none;
          border-radius:8px;
          font-weight:500;
          cursor:pointer;
        "
      >
        Create Project
      </button>
    </div>

  </form>

</div>
